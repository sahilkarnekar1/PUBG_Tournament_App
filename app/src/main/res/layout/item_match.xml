<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_back"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/tvMatchImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
         />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMatchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Title"
            android:layout_weight="1"
            android:gravity="start"
            android:textStyle="bold"
            android:textColor="#000000" />


        <TextView
            android:id="@+id/tvMatchType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
           android:gravity="center"
            android:layout_weight="1"
            android:text="Type"
            android:textColor="#666666"
             />

    <TextView
        android:id="@+id/tvMatchDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="end"
        android:layout_weight="1"
        android:textColor="#666666"
         />


</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/tvMatchEntryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry Fee:"
                android:textSize="14sp"
                android:gravity="start"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tvMatchTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"
                android:textSize="14sp"
                android:gravity="end"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textStyle="bold" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvMatchEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="start"
                android:layout_weight="1"
                android:textColor="#666666"
                 />


            <TextView
                android:id="@+id/tvMatchTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="end"
                android:layout_weight="1"
                android:textColor="#666666"
                 />


        </LinearLayout>

        <TextView
            android:id="@+id/tvMatchWinnersLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Winners:"
            android:textSize="14sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="#1:"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/tvMatchWin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="#2:"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/tvMatchWin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="#3:"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/tvMatchWin3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="#4:"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/tvMatchWin4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="#5:"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/tvMatchWin5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

    <TextView
        android:id="@+id/tvJoinedPlayersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joined Players:"
        android:textSize="14sp"
        android:textColor="#666666"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <ProgressBar
        android:id="@+id/progressBarJoinedPlayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_bar_horizontal"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/tvJoinedPlayersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="/"
            android:textColor="#666666" />
        <TextView
            android:id="@+id/tvTotalPlayersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnJoinMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Join Match"
            android:background="@drawable/rounded_corner_button"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Room ID"
            android:textColor="#666666"
            android:layout_marginStart="8dp" />
        <TextView
android:id="@+id/tvMatchRoomId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"

            android:textColor="#666666"
            android:layout_marginStart="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Room Pass"
                android:textColor="#666666"
                android:layout_marginStart="8dp" />
            <TextView
                android:id="@+id/tvMatchRoomPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:textColor="#666666"
                android:layout_marginStart="8dp" />

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>



</LinearLayout>